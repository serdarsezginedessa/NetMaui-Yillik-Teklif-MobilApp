<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp5.Pages.FotografPage"
             Title="Fotograf Bilgileri">
    <VerticalStackLayout>
        <Picker x:Name="PicYlkFotSay" Title="Yıllık Fotoğraf Sayısı" TextColor="#E28944"  >
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>1</x:String>
                    <x:String>2</x:String>
                    <x:String>3</x:String>
                    <x:String>4</x:String>
                    <x:String>5</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Entry x:Name="entKisFotSay" Placeholder="Kişisel Fotoğraf Sayısı"/>
        <Entry x:Name="entEtkFotSay" Placeholder="Etkinlik Fotoğraf Sayısı"/>
    </VerticalStackLayout>
</ContentPage>